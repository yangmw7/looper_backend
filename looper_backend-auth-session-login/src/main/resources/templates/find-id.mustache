{{> layout/header }}

<style>
    .find-container {
        background: white;
        padding: 40px 50px;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        text-align: center;
        width: 400px; /* ← 넓이 좀 넉넉하게 */
    }

    h2 {
        margin-bottom: 25px;
        color: #222;
        font-size: 24px;
    }

    label {
        display: block;
        margin-bottom: 10px;
        text-align: left;
        font-weight: bold;
    }

    input[type="email"] {
        width: 100%;
        padding: 12px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 6px;
        box-sizing: border-box;
        font-size: 16px;
    }

    button {
        width: 100%;
        padding: 12px;
        border: none;
        background-color: #4CAF50;
        color: white;
        border-radius: 6px;
        cursor: pointer;
        font-size: 16px;
    }

    button:hover {
        background-color: #45a049;
    }
</style>


<div class="find-container">
    <h2>아이디 찾기</h2>
    <form action="/find-id" method="post">
        <label for="email">가입한 이메일:</label>
        <input type="email" id="email" name="email" required>
        <button type="submit">아이디 찾기</button>
    </form>
</div>

{{> layout/footer }}
